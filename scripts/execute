#!/bin/bash

if [ "$1" = "help" ]
then
  echo "execute [file]"
  echo "A subcommand of compile, compiles then executes, before removing the compiled file"
  echo ""
  echo "Command Usage: execute Â¬"
  echo "  [File] - Input file"
  exit 0
fi

clear && g++ -o "temp.o" "$1" && ./"temp.o" && rm "temp.o"